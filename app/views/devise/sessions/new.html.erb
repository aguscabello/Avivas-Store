<%= content_for :title, "Login" %>

<body class="bg-gray-100">
  <div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
      <div class="w-full xl:w-3/4 lg:w-11/12 flex">
        <div
          class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
          style="background-image: url('https://i.pinimg.com/736x/58/e1/88/58e1883ebb51671235bf6675b7826238.jpg')"
        ></div>
        <!-- Col -->
        <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none">
            <%= render 'shared/flash' %>

          <h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="mb-4">
              <%= f.label :email, class: "block mb-2 text-sm font-bold text-gray-700" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
              <%= f.label :password, class: "block mb-2 text-sm font-bold text-gray-700" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
                <%= f.label :remember_me, class: "text-sm" %>
              </div>
            <% end %>
            <div class="mb-6 text-center">
              <%= f.submit "Sign In", class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
            </div>
            <hr class="mb-6 border-t" />
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>
