<%= search_form_for @q, url: products_path, class: "flex flex-col gap-4 md:flex-row items-center" do |f| %>
  <!-- Contenedor principal -->
  <div class="flex flex-col md:flex-row gap-4 w-full items-center">
    
    <!-- Campo de búsqueda por nombre o descripción -->
    <div class="flex-1">
      <%= f.text_field :name_or_rich_text_description_body_cont, 
        placeholder: "Search by name or description", 
        class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <!-- Selección de categoría -->
    <div class="flex-2">
      <%= f.label :category_id_eq, "Filter by Category", class: "block mb-3 font-medium text-gray-700" %>
      <%= f.select :category_id_eq, 
        Category.all.collect { |c| [c.name, c.id] }, 
        { prompt: 'Category' }, 
        class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2" %>
    </div>
    
    <!-- Botón de búsqueda -->
    <div>
      <%= f.submit "Search", 
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 focus:ring-4 focus:ring-blue-300" %>
    </div>
    
  </div>
  
  <div class="flex justify-end mt-4">
    <%= link_to products_path, 
      class: "inline-flex items-center justify-center p-2 bg-gray-200 text-red-700 rounded-full shadow-sm focus:ring-blue-300", 
      title: "Reset search" do %>
      <i class="fa-solid fa-rotate-right"></i>
    <% end %>
  </div>
<% end %>
