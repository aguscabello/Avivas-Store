<div class="flex flex-col bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 overflow-hidden mx-auto">
  <div class="w-full overflow-hidden">
    <!-- Contenedor para la imagen -->
    <div class="w-full h-52 bg-gray-100 flex items-center justify-center">
      <a href="<%= product_path(product) %>">
        <% if product.images.attached? %>
          <img class="h-full w-full object-cover rounded-t-lg" 
               src="<%= url_for(product.images.first) %>" 
               alt="<%= product.name %>" />
        <% else %>
          <img class="h-full w-full object-cover rounded-t-lg" 
               src="default-image-url" 
               alt="default image" />
        <% end %>
      </a>
    </div>
  </div>
  
  <!-- Contenedor para el contenido -->
  <div class="p-6">
    <a href="<%= product_path(product) %>">
      <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
        <%= product.name %>
      </h5>
    </a>
    
    <div class="flex items-center justify-between mt-2 mb-4">
      <span class="text-gray-200 text-sm">Stock:</span>
      <span class="text-gray-200 text-sm"><%= product.stock %></span>
    </div>

    <div class="flex items-center justify-between mt-2 mb-4">
      <span class="text-gray-200 text-sm">Price:</span>
      <span class="text-lg font-bold text-gray-200 dark:text-white"><%= number_to_currency(product.price) %></span>
    </div>

    <!-- BotÃ³n centrado -->
    <div class="flex justify-center">
      <%= link_to 'View more', product, class: "inline-block text-white bg-red-500 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-red-700 dark:hover:bg-red-800 dark:focus:ring-red-900" %>
    </div>
  </div>
</div>
