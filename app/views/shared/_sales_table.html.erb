<div class="overflow-x-auto">
  <table class="min-w-full table-auto border-collapse text-lg">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-6 py-3 text-left font-semibold">Client Name</th>
        <th class="px-6 py-3 text-left font-semibold">Employee</th>
        <th class="px-6 py-3 text-left font-semibold">Date</th>
        <th class="px-6 py-3 text-left font-semibold">Total</th>
        <th class="px-6 py-3 text-left font-semibold">Canceled</th>
        <th class="px-6 py-3 text-left font-semibold">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
        <tr class="border-b">
          <td class="px-6 py-4"><%= sale.client_name %></td>
          <td class="px-6 py-4"><%= sale.user.username %></td>
          <td class="px-6 py-4"><%= sale.date.strftime('%B %d, %Y') %></td>
          <td class="px-6 py-4"><%= number_to_currency(sale.total) %></td>
          <td class="px-6 py-4"><%= sale.canceled ? 'Yes' : 'No' %></td>
          <td class="px-6 py-4">
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_sale_path(sale), class: "text-blue-600 font-medium py-2 px-4 bg-blue-100 rounded-lg hover:bg-blue-200 transition duration-200" %>
              <%= link_to "Show", sale_path(sale), class: "text-green-600 font-medium py-2 px-4 bg-green-100 rounded-lg hover:bg-green-200 transition duration-200" %>
              <% if sale.canceled? %>
              <span class="text-red-500">Canceled</span>
              <% else %>
              <%= button_to "Cancel", sale_path(sale), method: :delete, 
                class: "text-red-600 font-medium py-2 px-4 bg-red-100 rounded-lg hover:bg-red-200 transition duration-200", 
                data: { confirm: "Are you sure?" } %>
              <%end%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
