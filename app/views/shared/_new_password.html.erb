<div id="modal-<%= user.id %>" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
    <h2 class="text-lg font-semibold mb-4">Reactivate User</h2>
    <p class="text-gray-600 mb-4">Set a new password for <%= user.username %>.</p>
    
    <%= form_with model:user, url: reactivate_admin_user_path(user), method: :put, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
      </div>
      
      <div class="flex justify-end space-x-4">
        <button type="button" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" onclick="document.getElementById('modal-<%= user.id %>').classList.add('hidden')">
          Cancel
        </button>
        <%= f.submit "Reactivate", class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700", data: { disable_with: "Reactivating..." } %>
      </div>
    <% end %> 
  </div>
</div>
