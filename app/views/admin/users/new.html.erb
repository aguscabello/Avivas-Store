<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New user</h1>

  <%= render "form", user: @user %>
  <% if flash[:alert] %>
    <div class="bg-yellow-100 text-yellow-800 p-4 mb-4 rounded-lg">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= link_to "Back to users", admin_users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
