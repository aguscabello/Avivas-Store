<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @sale %>

    <h3 class="mt-5 font-semibold text-lg">Productos vendidos</h3>
    <div class="mt-3">
      <% @sale.sold_products.each do |sold_product| %>
        <div class="mb-3 p-4 bg-gray-100 rounded-lg">
          <p><strong>Producto:</strong> <%= sold_product.product.name %></p>
          <p><strong>Cantidad:</strong> <%= sold_product.quantity %></p>
          <p><strong>Precio:</strong> <%= number_to_currency(sold_product.price) %></p>
          <p><strong>Total:</strong> <%= number_to_currency(@sale.total) %></p>
        </div>
      <% end %>
    </div>

    <%= link_to "Edit this sale", edit_sale_path(@sale), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to sales", sales_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this sale", @sale, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
